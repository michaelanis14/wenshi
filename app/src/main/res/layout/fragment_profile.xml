<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:divider="@drawable/empty_tall_divider"
    android:orientation="vertical"
    android:padding="15dp"
    android:showDividers="middle">

    <TextView
        android:id="@+id/textView_profile_userName_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText_profile_userName"
        android:text="@string/textView_profile_userName_label"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_profile_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/reset_password_btn"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="@color/cardview_light_background"
        android:text="@string/reset_password" />
    <TextView
        android:id="@+id/textView_profile_email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText_profile_email"
        android:text="@string/textView_profile_email_label"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorBlack" />



    <TextView
        android:id="@+id/textView_profile_mobile_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText_profile_mobile"
        android:text="@string/textView_profile_mobile_label"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_profile_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorBlack" />
    <Button
        android:id="@+id/send_verify_btn"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="@color/cardview_light_background"
        android:text="@string/fui_verify_phone_number" />
    <Button
        android:id="@+id/resend_verify_btn"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="@color/cardview_light_background"
        android:text="@string/fui_resend_code" />



    <TextView
        android:id="@+id/textView_profile_Code_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText_code_mobile"
        android:text="@string/fui_enter_confirmation_code"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_code_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorBlack" />
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="@color/cardview_light_background"
        android:text="@string/fui_verify_your_phone_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_wheel_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="#FFA500"
            wheel:matProg_progressIndeterminate="true" />

        <Button
            android:id="@+id/button_profile_saveButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/tw__solid_white" />
    </LinearLayout>

</LinearLayout>