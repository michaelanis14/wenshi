<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:divider="@drawable/empty_tall_divider"
    android:orientation="vertical"
    android:padding="15dp"
    android:showDividers="middle">

    <TextView
        android:id="@+id/textView_profile_userName_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textView_profile_userName_label"
        android:labelFor="@id/editText_profile_userName"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_profile_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/textView_profile_email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textView_profile_email_label"
        android:labelFor="@id/editText_profile_email"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/reset_password_btn"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:text="@string/reset_password" />

    <TextView
        android:id="@+id/textView_profile_mobile_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textView_profile_mobile_label"
        android:labelFor="@id/editText_profile_mobile"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editText_profile_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_profile_saveButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/tw__solid_white" />
    </LinearLayout>

</LinearLayout>