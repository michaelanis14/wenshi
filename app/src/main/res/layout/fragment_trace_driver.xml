<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wenshi_egypt.wenshi.TraceDriverFragment">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/etaTraceDriver"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Your driver will arrive after seconds!"
                android:background="@color/colorDarkGrey"
                android:textColor="@color/tw__solid_white"
                android:textSize="@dimen/font_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/to_icon"
                    />
                <TextView
                    android:id="@+id/dropOffTraceDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Add dropoff Location"
                    android:textSize="@dimen/font_22" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:paddingTop="20dp"
                android:background="@color/colorLightGrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/orange_square"/>
                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver name"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/font_24" />

                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/colorLightGrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/winshColor"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Green"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/font_24" />
                    <TextView
                        android:id="@+id/winshType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Renault Logan"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/font_24" />
                    <TextView
                        android:id="@+id/plateNumber"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/font_24"
                        android:background="@drawable/border"/>

                </LinearLayout>


            </LinearLayout>
            <Button
                android:id="@+id/button_call_driver"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/call_driver"
                android:textSize="@dimen/font_24"
                android:textColor="@color/tw__solid_white"
                android:background="@color/colorBlack"/>

        </LinearLayout>

</FrameLayout>
