<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_vehicle_type"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:textColor="#a6a69e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp" />

    <TextView
        android:id="@+id/textView_vehicle_type2"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginStart="172dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_vehicle_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_vehicle_type"
        android:layout_marginLeft="172dp" />

    <TextView
        android:id="@+id/textView_vehicle_model"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginStart="300dp"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_vehicle_type2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="300dp" />


</android.support.constraint.ConstraintLayout>